# get product detail from db/product and make a line_item for each one, then call/send them to order/show
<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td class="price">
  
    <%=  product.price %>
    <%= humanized_money_with_symbol product.price %>

  </td>

 
  <td>
    <%=  humanized_money_with_symbol product.price * quantity %>
  </td>
</tr>

